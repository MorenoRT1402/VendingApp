{% extends 'base.html.twig' %}

{% block title %}Vending Solutions 24/7{% endblock %}

{% block body %}
    <section class="hero text-center py-5 bg-primary text-white">
        <div class="container">
            <h1>Vending Solutions 24/7</h1>
            <p class="lead">Customized vending solutions, available 24 hours a day.</p>
            <a href="{{ path('app_product') }}" class="btn btn-lg btn-light">See our products</a>
        </div>
    </section>

    <section class="features py-5 bg-light">
        <div class="container">
            <div class="row">
                <div class="col-md-4 text-center">
                    <i class="fas fa-clock fa-3x mb-3 text-primary"></i>
                    <h2>24/7 Availability</h2>
                    <p>Vending machines available at all times, to satisfy your needs at any time.</p>
                </div>
                <div class="col-md-4 text-center">
                    <i class="fas fa-check-circle fa-3x mb-3 text-success"></i>
                    <h2>Quality Products</h2>
                    <p>We carefully select the best products to offer you the best quality and variety.</p>
                </div>
                <div class="col-md-4 text-center">
                    <i class="fas fa-truck fa-3x mb-3 text-info"></i>
                    <h2>Technical Support</h2>
                    <p>We have a technical service team to guarantee the correct operation of our machines.</p>
                </div>
            </div>
        </div>
    </section>

    <section class="contact py-5">
      <div class="container">
        <div class="row">
          <div class="col-md-8 offset-md-2 text-center">
            <h2>Contact Us</h2>
            <p>Do you have any questions or need more information? Do not hesitate to contact us.</p>
            <a href="#" class="btn btn-primary">Contact</a>
          </div>
        </div>
      </div>
    </section>
{% endblock %}